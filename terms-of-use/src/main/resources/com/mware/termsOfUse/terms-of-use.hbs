<div class="terms-modal modal fade" style="text-align: left" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4>{{ terms.title }}</h4>
            </div>
            <div class="modal-body">
                <div class="term-body">
                    <p>{{{ terms.html }}}</p>
                    {{#if terms.date }}
                        <p style="text-align:right; font-style:italic">{{ terms.date }}</p>
                    {{/if}}
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" style="float:left" class="btn btn-raised btn-danger">{{ i18n 'termsOfUse.button.decline' }}</a>
                <a href="#" class="btn btn-raised btn-primary">{{ i18n 'termsOfUse.button.accept' }}</a>
            </div>
        </div>
    </div>
</div>
